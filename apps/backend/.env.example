# Environment Configuration
# Copy this file to .env and fill in the actual values

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:yourpassword@localhost:5432/radio_inventar

# CORS allowed origins (comma-separated, required in production)
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Session signing key (min. 32 chars)
SESSION_SECRET=replace-with-random-secret-min-32-chars

# API token used by frontend for non-admin endpoints
API_TOKEN=replace-with-random-token-min-32-chars

# Story 6.5: PDF Print Template with QR Code
# Public app URL embedded in QR code for offline fallback
# Production: Must be valid HTTPS URL
# Development: Defaults to http://localhost:5173 if not set
PUBLIC_APP_URL=https://radio-inventar.example.com

# Pocket ID OIDC configuration
POCKET_ID_ISSUER_URL=http://localhost:1411
POCKET_ID_CLIENT_ID=radio-inventar
POCKET_ID_CLIENT_SECRET=change-me
POCKET_ID_CALLBACK_URL=http://localhost:3000/api/admin/auth/pocketid/callback
POCKET_ID_SCOPE=openid profile email
